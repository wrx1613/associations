<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-form">
		<view class="weui-form__text-area">
			<h2 class="weui-form__title">山西大学商务学院社团信息平台</h2>
		</view>
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells__title">请绑定账号</view>
				<view class="weui-cells weui-cells_form">
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">账号</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="请输入账号" placeholder-class="weui-input__placeholder" bindinput="uname"/>
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">密码</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="请输入密码" placeholder-class="weui-input__placeholder" password bindinput="pwd"/>
						</view>
					</view>
				</view>
			</view>
		</view>
		<view class="weui-form__opr-area">
			<a class="weui-btn weui-btn_primary"  bindtap="bind">确定</a>
		</view>
		<view class="weui-form__extra-area">
			<view class="weui-footer">
				<view class="weui-footer__text">Copyright © 2021 wangruixiang</view>
			</view>
		</view>
	</view>
	
		
</view>
<view class="fadeIn {{hideTextToast ? 'fadeOut' : ''}}" wx:if="{{textToast}}">
		<view class="weui-mask_transparent"></view>
		<view class="weui-toast weui-toast_text">
			<view class="weui-toast__content">{{errInfo}}</view>
		</view>
	</view>
